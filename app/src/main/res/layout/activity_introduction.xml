<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_activity_introduction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            style="@style/Introduction_Title"
            android:text="@string/gc_introduction_liaocheng" />

        <TextView
            style="@style/Introduction_Title"
            android:text="@string/gc_introduction_gechuang" />

        <TextView
            style="@style/Introduction_Title"
            android:text="@string/gc_introduction_computer" />
    </LinearLayout>

    <VideoView
        android:id="@+id/vv_introduction_video"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tv_gc_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/tv_gc_logo"
        android:textColor="@color/red"/>


</LinearLayout>