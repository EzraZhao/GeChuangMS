<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_register_header"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:showIn="@layout/activity_register">

    <ImageView
        android:id="@+id/iv_register_header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_register_header_bg" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_default_user_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/bt_register_user_icon_ed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:src="@mipmap/ic_icon" />

    <Button
        android:id="@+id/bt_register_user_icon_ed"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/iv_register_header_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/ic_register_header_edit" />

</RelativeLayout>