<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="?attr/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/yuan"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/tv_user_name"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nav_header_tv_user_name"
        android:textSize="20sp"
        android:text="@string/app_name"
        android:layout_marginRight="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/ic_user_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_user_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nav_header_tv_user_name"
        android:textSize="12sp"
        android:text="@string/str_header_signature"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/ic_user_image"
        android:layout_toRightOf="@+id/ic_user_image"
        android:layout_toEndOf="@+id/ic_user_image" />

</RelativeLayout>